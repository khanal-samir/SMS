generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String    @unique @default(cuid())
  email           String    @unique
  password        String?
  name            String
  refreshToken    String?
  role            Role      @default(STUDENT)
  provider        Provider  @default(LOCAL)
  isEmailVerified Boolean   @default(false)
  otpCode         String?
  otpExpiry       DateTime?

  @@index([id])
  @@index([id, role])
}

enum Provider {
  LOCAL
  GOOGLE
}

enum Role {
  ADMIN
  TEACHER
  STUDENT
}
