generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                     String    @id @default(cuid())
  email                  String    @unique
  password               String?
  name                   String
  image                  String?
  refreshToken           String?
  role                   Role      @default(STUDENT)
  provider               Provider  @default(LOCAL)
  isEmailVerified        Boolean   @default(false)
  otpCode                String?
  otpExpiry              DateTime?
  passwordResetOtp       String?
  passwordResetOtpExpiry DateTime?
  isTeacherApproved      Boolean   @default(false)
  batchId                String?
  createdAt              DateTime  @default(now())
  updatedAt              DateTime  @updatedAt

  // Relations
  batch             Batch?             @relation(fields: [batchId], references: [id], onDelete: SetNull)
  studentSemesters  StudentSemester[]
  subjectTeachers   SubjectTeacher[]
  announcements     Announcement[]
  announcementReads AnnouncementRead[]

  // chatGroupMembers ChatGroupMember[]

  @@index([id])
  @@index([id, role])
}

model Batch {
  id                String    @id @default(cuid())
  batchYear         Int       @unique
  startDate         DateTime
  endDate           DateTime?
  totalStudents     Int
  currentSemesterId String?
  isActive          Boolean   @default(true)
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  // Relations
  users           User[]
  currentSemester Semester?      @relation(fields: [currentSemesterId], references: [id])
  assignments     Assignment[]
  announcements   Announcement[]
}

model Semester {
  id             String         @id @default(cuid())
  semesterNumber SemesterNumber @unique
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt

  // Relations
  batches          Batch[]
  studentSemesters StudentSemester[]
  subjects         Subject[]
}

model StudentSemester {
  id         String                @id @default(cuid())
  studentId  String
  semesterId String
  enrolledAt DateTime              @default(now())
  status     StudentSemesterStatus @default(ACTIVE)

  // Relations
  student  User     @relation(fields: [studentId], references: [id], onDelete: Cascade)
  semester Semester @relation(fields: [semesterId], references: [id], onDelete: Cascade)

  @@unique([studentId, semesterId])
}

model Subject {
  id          String   @id @default(cuid())
  subjectCode String   @unique
  subjectName String
  semesterId  String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  semester        Semester         @relation(fields: [semesterId], references: [id], onDelete: Cascade)
  subjectTeachers SubjectTeacher[]
}

model SubjectTeacher {
  id         String   @id @default(cuid())
  subjectId  String
  teacherId  String
  assignedAt DateTime @default(now())
  isActive   Boolean  @default(true)

  // Relations
  subject Subject @relation(fields: [subjectId], references: [id], onDelete: Cascade)
  teacher User    @relation(fields: [teacherId], references: [id], onDelete: Cascade)

  assignments Assignment[]

  @@unique([subjectId, teacherId])
}

