generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String  @unique @default(cuid())
  email        String  @unique
  password     String
  name         String
  refreshToken String?
  role         Role    @default(STUDENT)

  @@index([id])
  @@index([role])
}

enum Role {
  ADMIN
  TEACHER
  STUDENT
}
